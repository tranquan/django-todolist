{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "docker-build",
			"label": "docker-build",
			"platform": "python",
			"dockerBuild": {
				"dockerfile": "${workspaceFolder}/compose/local/django/Dockerfile",
				"context": "${workspaceFolder}",
				"pull": true
			}
		},
		{
			"type": "docker-run",
			"label": "docker-run: debug",
			"dependsOn": [
				"docker-build"
			],
			"python": {
				"wait": true,
				"args": [
					"runserver_plus",
					"0.0.0.0:8000"
				],
				"file": "manage.py",
			},
			"dockerRun": {
				"containerName": "todolist",
			}
		}
	]
}